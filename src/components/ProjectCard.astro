---
import Icon from './Icon.astro';

interface Props {
  title: string;
  description: string;
  category: string;
  color: string;
  icon: string;
  link: string;
  logo?: string;
  size?: 'normal' | 'large' | 'tall';
}

const { title, description, category, color, icon, link, logo, size = 'normal' } = Astro.props;

const sizeClasses = {
  normal: 'col-span-1 row-span-1 min-h-[300px]',
  large: 'col-span-1 md:col-span-2 row-span-1 min-h-[300px]',
  tall: 'col-span-1 row-span-2 min-h-[600px]',
};
---

<div class={`group relative perspective-1000 ${sizeClasses[size]}`}>
  <div class="card-inner relative w-full h-full rounded-2xl transition-all duration-300 ease-out transform-style-3d hover:z-10">
    
    <!-- Animated Gradient Background -->
    <div class="absolute inset-0 rounded-2xl overflow-hidden">
      <div class="absolute inset-0 bg-dark-secondary"></div>
      
      {/* Main Background Image */}
      {logo && (
        <div class="absolute inset-0 transition-transform duration-700 group-hover:scale-110">
          <img src={logo} alt="" class="w-full h-full object-cover opacity-60 group-hover:opacity-40 transition-opacity duration-500" />
        </div>
      )}

      {/* Gradient Overlay for Text Readability */}
      <div class="absolute inset-0 bg-gradient-to-t from-dark via-dark/80 to-transparent opacity-90"></div>
      
      {/* Decorative Gradient Blob */}
      <div class="absolute top-[-50%] left-[-50%] w-[200%] h-[200%] opacity-20 group-hover:opacity-30 transition-opacity duration-500 animate-[spin_20s_linear_infinite] mix-blend-overlay" 
           style={`background: radial-gradient(circle at 50% 50%, ${color}, transparent 70%);`}>
      </div>

      <div class="absolute inset-0 bg-dark/10 backdrop-blur-[0px] group-hover:backdrop-blur-[2px] transition-all duration-500"></div>
    </div>

    <!-- Border Glow -->
    <div class="absolute inset-0 rounded-2xl border border-white/10 group-hover:border-white/30 transition-colors duration-300"></div>

    <!-- Content -->
    <div class="relative h-full p-8 flex flex-col justify-between z-10 transform translate-z-10">
      <div class="flex justify-between items-start">
        <div class="w-12 h-12 rounded-xl flex items-center justify-center bg-white/5 backdrop-blur-md border border-white/10 text-white group-hover:scale-110 transition-transform duration-300" style={`color: ${color}`}>
          <Icon name={icon} class="w-6 h-6" />
        </div>
        <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider bg-white/5 border border-white/10 backdrop-blur-md" style={`color: ${color}`}>
          {category}
        </span>
      </div>

      <div class="mt-auto transform transition-transform duration-300 group-hover:-translate-y-2">
        <h3 class="text-3xl md:text-4xl font-display font-bold text-white mb-2 leading-tight">
          {title}
        </h3>
        
        <div class="grid grid-rows-[0fr] group-hover:grid-rows-[1fr] transition-[grid-template-rows] duration-300 ease-out">
          <div class="overflow-hidden">
            <p class="text-text-muted text-sm md:text-base leading-relaxed mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100">
              {description}
            </p>
          </div>
        </div>
        
        <a href={link} class="inline-flex items-center text-sm font-bold uppercase tracking-widest mt-2" style={`color: ${color}`}>
          DÃ©couvrir
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
  .transform-style-3d {
    transform-style: preserve-3d;
  }
  .translate-z-10 {
    transform: translateZ(20px);
  }
</style>

<script>
  // Vanilla Tilt Effect
  const cards = document.querySelectorAll('.card-inner');

  cards.forEach(card => {
    card.addEventListener('mousemove', (e) => {
      // @ts-ignore
      const rect = card.getBoundingClientRect();
      // @ts-ignore
      const x = e.clientX - rect.left;
      // @ts-ignore
      const y = e.clientY - rect.top;
      
      const centerX = rect.width / 2;
      const centerY = rect.height / 2;
      
      const rotateX = ((y - centerY) / centerY) * -10; // Max rotation deg
      const rotateY = ((x - centerX) / centerX) * 10;

      // @ts-ignore
      card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
    });

    card.addEventListener('mouseleave', () => {
      // @ts-ignore
      card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)';
    });
  });
</script>
