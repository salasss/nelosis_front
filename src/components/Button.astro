---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  class?: string;
  [key: string]: any;
}

const { href, variant = 'primary', class: className, ...rest } = Astro.props;

const baseStyles = "inline-flex items-center justify-center px-6 py-3 rounded-full font-medium transition-all duration-300 transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-dark";

const variants = {
  primary: "bg-primary text-white hover:shadow-[0_0_20px_rgba(251,168,36,0.4)] focus:ring-primary",
  secondary: "bg-white text-dark hover:bg-gray-100 focus:ring-white",
  outline: "border border-primary text-primary hover:bg-primary hover:text-white focus:ring-primary",
};

const Element = href ? 'a' : 'button';
---

<Element href={href} class:list={[baseStyles, variants[variant], className]} {...rest}>
  <slot />
</Element>
