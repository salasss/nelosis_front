---
import projects from '../data/projects.json';

const navItems = [
  { name: 'À propos', href: '#about' },
  { name: 'Programmes', href: '#programs', type: 'dropdown' },
  { name: 'Carte', href: '#map' },
  { name: 'Équipe', href: '#team' },
  { name: 'Contact', href: '#contact' },
];

const activeProjects = projects.filter(p => p.status !== 'coming_soon');
---

<header class="fixed w-full top-0 z-50 bg-dark/80 backdrop-blur-md border-b border-white/5 transition-all duration-300" id="main-header">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-display font-bold text-white flex items-center gap-2">
      <!-- Placeholder Logo -->
      <div class="w-8 h-8 bg-primary rounded-full"></div>
      Nélosis
    </a>

    <nav class="hidden md:flex gap-8 items-center">
      {navItems.map(item => (
        item.type === 'dropdown' ? (
          <div class="relative group">
            <button class="text-text-muted hover:text-primary transition-colors text-sm font-medium flex items-center gap-1 py-2 outline-none cursor-pointer">
              {item.name}
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 transition-transform duration-300 group-hover:rotate-180">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
              </svg>
            </button>
            <div class="absolute left-1/2 -translate-x-1/2 top-full pt-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top z-50">
              <div class="bg-dark/95 backdrop-blur-xl border border-white/10 rounded-xl shadow-xl overflow-hidden flex flex-col p-1">
                {activeProjects.map(project => (
                  <a href={`/programs/${project.slug}`} class="block px-4 py-2.5 text-sm text-text-muted hover:bg-white/10 hover:text-white rounded-lg transition-colors text-left">
                    {project.title}
                  </a>
                ))}
              </div>
            </div>
          </div>
        ) : (
          <a href={item.href} class="text-text-muted hover:text-primary transition-colors text-sm font-medium">
            {item.name}
          </a>
        )
      ))}
    </nav>

    <div class="flex gap-4">
      <a href="#contact" class="hidden md:block px-5 py-2 rounded-full border border-primary text-primary hover:bg-primary hover:text-white transition-all text-sm font-medium">
        Rejoindre
      </a>
      <!-- Mobile Menu Button Placeholder -->
      <button class="md:hidden text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </div>
</header>
