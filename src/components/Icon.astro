---
import { Leaf, LifeBuoy, Box, School, Lock, Hourglass } from "lucide-astro";

interface Props {
  name: string;
  class?: string;
}

const { name, class: className } = Astro.props;

const iconMap: Record<string, any> = {
  leaf: Leaf,
  "life-buoy": LifeBuoy,
  cube: Box,
  school: School,
  lock: Lock,
  hourglass: Hourglass,
};

const IconComponent = iconMap[name];
---

{IconComponent && <IconComponent class={className} />}
